<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:height="40dp"
        android:background="#00BCD4"
        android:gravity="center_horizontal|center_vertical"
        android:text="Job List"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/Driver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:background="#114B46"
        android:capitalize="characters"
        android:gravity="center"
        android:hint="Driver name"
        android:text="Driver_name"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/driver_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:background="#114B46"
        android:capitalize="characters"
        android:gravity="center_vertical"
        android:hint="Driver name"
        android:paddingLeft="10dp"
        android:text="driver_phone"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/Log_break_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:text="LOG BREAK" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:height="40dp"
        android:background="#00BCD4"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="PENDING TRIPS"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/LPT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:background="#3D7575"
        android:gravity="center"
        android:padding="20dp"
        android:text="LPT2084706" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>